<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.*?>
<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminController"
            stylesheets="@../style/admin.css">

    <!-- SIDEBAR -->
    <left>
        <VBox styleClass="sidebar" spacing="15">
            <Label text="ADMIN PANEL" styleClass="sidebar-title"/>

            <Button text="Dashboard" onAction="#showDashboard"/>
            <Button text="Kelola Kendaraan" onAction="#showKendaraan"/>
            <Button text="Kelola Petugas" onAction="#showPetugas"/>
            <Button text="Laporan" onAction="#showLaporan"/>
            <Button text="Logout" onAction="#logout"/>
        </VBox>
    </left>

    <!-- KONTEN -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>

</BorderPane>



