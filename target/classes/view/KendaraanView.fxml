<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.KendaraanController"
      spacing="15"
      style="-fx-padding:20;">

    <Label text="Kelola Kendaraan"
           style="-fx-font-size:18; -fx-font-weight:bold;" />

    <!-- FORM INPUT -->
    <GridPane hgap="10" vgap="10">
        <Label text="ID Kendaraan"/>
        <TextField fx:id="idField" GridPane.columnIndex="1"/>

        <Label text="Merek" GridPane.rowIndex="1"/>
        <TextField fx:id="merekField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Model" GridPane.rowIndex="2"/>
        <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Harga / Hari" GridPane.rowIndex="3"/>
        <TextField fx:id="hargaField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <Button text="Tambah Kendaraan" onAction="#tambahKendaraan"/>

    <!-- TABLE -->
    <TableView fx:id="tableKendaraan">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colMerek" text="Merek"/>
            <TableColumn fx:id="colModel" text="Model"/>
            <TableColumn fx:id="colStatus" text="Status"/>
            <TableColumn fx:id="colHarga" text="Harga"/>
        </columns>
    </TableView>

</VBox>
