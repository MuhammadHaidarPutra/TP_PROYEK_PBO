<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            stylesheets="@../style/login.css">

    <center>
        <StackPane alignment= "CENTER" styleClass="bg">

            <HBox styleClass="login-container" alignment="CENTER" maxWidth="900">

                <!-- LOGO -->
                <VBox styleClass="logo-section" alignment="CENTER">
                    <ImageView fitWidth="260" preserveRatio="true">
                        <image>
                            <Image url="@../assets/sewain.png"/>
                        </image>
                    </ImageView>
                </VBox>

                <!-- FORM -->
                <VBox styleClass="form-section" spacing="20" alignment="CENTER">

                    <Label text="SISTEM PENYEWAAN KENDARAAN" styleClass="title"/>

                    <TextField fx:id="usernameField" promptText="Username"/>
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
                        <TextField fx:id="showPasswordField" promptText="Password" styleClass="input-field" visible="false" managed="false"/>
                        <Button fx:id="togglePasswordBtn" onAction="#togglePassword" styleClass="show-password-btn">
                            <graphic>
                                <ImageView fitHeight="18" fitWidth="18">
                                    <image>
                                        <Image url="@../assets/eye.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>

                    <Button text="LOGIN" onAction="#login"/>

                    <Label fx:id="messageLabel" styleClass="message"/>
                </VBox>

            </HBox>

        </StackPane>
    </center>

</BorderPane>




