<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.KendaraanController" spacing="15">

    <Label text="Kelola Data Kendaraan" styleClass="kendaraan-title"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="tfSearch" promptText="Cari kendaraan..." styleClass="search-field" onKeyReleased="#handleSearch" />
    </HBox>

    <HBox spacing="10" styleClass="kendaraan-form">
        <TextField fx:id="tfPlat" promptText="Plat Nomor" styleClass="text-field"/>
        <ComboBox fx:id="cbJenis" promptText="Pilih Jenis" prefWidth="150" styleClass="combo-box"/>
        <ComboBox fx:id="cbMerk" promptText="Pilih Merk" prefWidth="150" styleClass="combo-box"/>
        <ComboBox fx:id="cbTahun" promptText="Pilih Tahun" prefWidth="100" styleClass="combo-box"/>
        <Button text="Tambah" onAction="#handleTambah" styleClass="action-btn"/>
        <Button text="Ubah" onAction="#handleUbah" styleClass="action-btn"/>
        <Button text="Hapus" onAction="#handleHapus" styleClass="action-btn"/>
    </HBox>
    <TableView fx:id="tableKendaraan" VBox.vgrow="ALWAYS" prefHeight="300" maxWidth="1000" prefWidth="1.0" styleClass="admin-table">
        <columns>
            <TableColumn fx:id="colPlat" text="Plat Nomor" prefWidth="150"/>
            <TableColumn fx:id="colMerk" text="Merk" prefWidth="150"/>
            <TableColumn fx:id="colJenis" text="Jenis" prefWidth="150"/>
            <TableColumn fx:id="colTahun" text="Tahun" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 0 0 0;">
        <Button fx:id="btnPrev" text="Prev" onAction="#prevPage" />
        <Label fx:id="pageInfoLabel" text="Halaman 1/1" style="-fx-font-weight: bold; -fx-padding: 0 10 0 10;" />
        <Button fx:id="btnNext" text="Next" onAction="#nextPage" />
    </HBox>

</VBox>

