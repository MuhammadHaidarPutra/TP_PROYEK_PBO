<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.PetugasController" spacing="15">

    <Label text="Kelola Akun Petugas"
           style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="tfUsername" promptText="Username"/>
        <PasswordField fx:id="tfPassword" promptText="Password"/>
        <Button text="Tambah" onAction="#handleTambah" styleClass="action-btn"/>
        <Button text="Ubah" onAction="#handleUbah" styleClass="action-btn"/>
        <Button text="Hapus" onAction="#handleHapus" styleClass="action-btn"/>
    </HBox>
    <TableView fx:id="tablePetugas" prefHeight="300" styleClass="admin-table">
        <columns>
            <TableColumn fx:id="colUsername" text="Username"/>
            <TableColumn fx:id="colPassword" text="Password"/>
        </columns>
    </TableView>

</VBox>


